<Page x:Class="MarkBooks.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarkBooks"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="MainPage">

    <Grid x:Name="Main" Background="#FFAA764A">
        <Button x:Name="searchButton" Content="Search" HorizontalAlignment="Left" VerticalAlignment="Top" Width="140" Margin="78,64,0,0" FontSize="16" FontFamily="Cooper Black" Height="50" Click="searchButton_Click"/>
        <Button x:Name="bookMarksButton" Content="Book Marks" HorizontalAlignment="Left" VerticalAlignment="Top" Width="140" Margin="78,119,0,0" FontFamily="Cooper Black" FontSize="16" Height="50"/>
        <Button x:Name="allBooksButton" Content="Show all books" HorizontalAlignment="Left" VerticalAlignment="Top" Width="140" Margin="78,174,0,0" Height="50" FontFamily="Cooper Black" FontSize="16" IsDefault="True"/>
    </Grid>
</Page>
